{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "types": ["@fastify/auth", "@fastify/cors", "@fastify/multipart", "@fastify/static"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
